<div class="ui container segment">
    <h1 class="ui header">Notes</h1>
    <div class="ui form">
        <Input class="ui input" @value={{model.content}} @maxlength={{model.MAX}} {{action "visible" model}}></Input>
    </div>
    <button {{action 'clear' model}} class="ui button icon"><i class="trash alternate outline icon"></i>Clear
        field</button>
    <div class="ui message {{model.style}}">
        {{model.size}} characters left.
    </div>
    <div class="ui {{model.visible}} {{model.style_info}} message">
        {{model.msg_info}}
    </div>
</div>


{{outlet}}